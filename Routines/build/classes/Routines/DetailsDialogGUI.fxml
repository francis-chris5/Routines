<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane stylesheets="@RoutineStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <AnchorPane prefHeight="67.0" prefWidth="270.0">
         <children>
            <VBox layoutX="23.0" layoutY="28.0" prefHeight="60.0" prefWidth="204.0">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="txtRoutineName">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox layoutX="287.0" layoutY="28.0" prefHeight="60.0" prefWidth="204.0">
               <children>
                  <Label text="Start Date" />
                  <DatePicker fx:id="dtRoutineStartDate">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </DatePicker>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox layoutX="23.0" layoutY="94.0" prefHeight="155.0" prefWidth="284.0">
               <children>
                  <Label text="Notes" />
                  <TextArea fx:id="txtRoutineNotes" prefHeight="122.0" prefWidth="194.0" wrapText="true">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox layoutX="317.0" layoutY="94.0" prefHeight="144.0" prefWidth="127.0" spacing="3.0">
               <children>
                  <Label text="Timescale" />
                  <RadioButton fx:id="rdbMinutes" mnemonicParsing="false" text="Minutes">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="timescaleToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rdbHours" mnemonicParsing="false" text="Hours" toggleGroup="$timescaleToggleGroup">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rdbDays" mnemonicParsing="false" selected="true" text="Days" toggleGroup="$timescaleToggleGroup">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rdbWeeks" mnemonicParsing="false" text="Weeks" toggleGroup="$timescaleToggleGroup">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rdbMonths" mnemonicParsing="false" text="Months" toggleGroup="$timescaleToggleGroup">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rdbYears" mnemonicParsing="false" text="Years" toggleGroup="$timescaleToggleGroup">
                     <VBox.margin>
                        <Insets left="8.0" />
                     </VBox.margin>
                  </RadioButton>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</DialogPane>
